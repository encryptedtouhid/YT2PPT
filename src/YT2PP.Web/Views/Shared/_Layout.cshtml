﻿@using Microsoft.Extensions.Options
@using YT2PP.Models;
@inject IOptions<AppSettings> appSettings


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YT2PP.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YT2PP.Web.styles.css" asp-append-version="true" />
    @await Component.InvokeAsync("NToastNotify")
</head>
<body>
    <header>
        <!-- Add this in your _Layout.cshtml -->
        <div id="loading-spinner" style="display:none;">
            <div class="spinner"></div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - <a href=@appSettings.Value.AppOwnerUrl target="_blank">@appSettings.Value.AppOwner</a>  -  Version: @appSettings.Value.Version
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
